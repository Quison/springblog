<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moguichun.blog.dao.PostUserDao">

	<select id="findAllPostUser" resultType="PostUser">
		SELECT * FROM post_user
	</select>
	
	<select id="findPostUserById" parameterType="Integer" resultType="PostUser">
		SELECT * FROM post_user WHERE id = #{id}
	</select>
	
	<insert id="insertPostUser" parameterType="PostUser" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO post_user(id, post_id, user_id, create_date)
		VALUES(#{id}, #{postId}, #{userId}, now())
	</insert>
	
	<update id="updatePostUser" parameterType="PostUser">
	
		UPDATE post_user
		<set>
			<if test="postId != null">
				post_id = #{postId, jdbcType=INTEGER},
			</if>
			<if test="userId != null"> 
				user_id = #{userId, jdbcType=INTEGER},
			</if>
				update_date = now()
		</set>
		WHERE id = #{id, jdbcType=INTEGER}
	</update>

</mapper>